{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "cmake-build",
          "type": "shell",
          "command": "cmake",
          "args": [
              "--build",
              "${workspaceFolder}/software/build-debug",
              "--config",
              "Debug"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          },
          "problemMatcher": [
              "$gcc",
              "$msCompile"
          ]
      }
  ]
}
